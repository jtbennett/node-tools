{
  "name": "@jtbennett/node-utils",
  "version": "1.0.0-beta1",
  "description": "Utilities with minimal dependencies for use in node apps.",
  "keywords": [],
  "author": "John Bennett <john@jtbennett.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": {
    "url": "https://github.com/jtbennett/node-utils/issues"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "dev": "yarn build --watch --preserveWatchOutput",
    "lint": "eslint ./src --ext .ts --env node",
    "test": "jest --passWithNoTests --rootDir ./",
    "clean": "rimraf ./lib ./tsconfig.tsBuildInfo",
    "build": "tsc --build ./tsconfig.build.json",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./coverage ./node_modules"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^12.7.8",
    "eslint": "^6.8.0",
    "jest": "24.9.0",
    "rimraf": "^3.0.2",
    "ts-essentials": "^6.0.5",
    "typescript": "~3.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ]
  }
}
